<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapacitorCalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue_cyan</item>
        <item name="colorPrimaryVariant">@color/theme_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_orange_light</item>
        <item name="colorSecondaryVariant">@color/theme_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/white</color>
    <color name="selected_dropdown_color">@color/theme_blue_cyan</color>

</resources>