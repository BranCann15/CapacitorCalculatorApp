<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_outline_enter_code"
        style="@style/TextInputLayoutDesign"
        android:hint="@string/text_box_enter_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_enter_code"
            style="@style/TextInputEditTextDesign"
            android:maxLength="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_outline_enter_pf"
        style="@style/TextInputLayoutDesign"
        android:hint="@string/text_box_enter_pf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_outline_enter_code">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_enter_pf"
            style="@style/TextInputEditTextDesign"
            android:maxLength="8" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_outline_enter_nf"
        style="@style/TextInputLayoutDesign"
        android:hint="@string/text_box_enter_nf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_outline_enter_pf">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_enter_nf"
            style="@style/TextInputEditTextDesign"
            android:maxLength="5" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_outline_enter_uf"
        style="@style/TextInputLayoutDesign"
        android:hint="@string/text_box_enter_uf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_outline_enter_nf">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_enter_uf"
            style="@style/TextInputEditTextDesign"
            android:maxLength="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_calculate"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/outlined_box"
        android:text="@string/button_calculate"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/theme_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_outline_enter_uf" />

    <TextView
        android:id="@+id/display_capacitance"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/enter_code"
        android:textAllCaps="false"
        android:textColor="?android:textColor"
        android:textAlignment="center"
        android:textSize="32sp"
        android:background="@drawable/outlined_box"
        android:drawablePadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>