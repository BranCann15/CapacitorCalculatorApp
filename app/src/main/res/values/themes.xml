<resources>
    <!-- Base application theme. -->
    <style name="Theme.CapacitorCalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue_cyan</item>
        <item name="colorPrimaryVariant">@color/theme_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_orange_light</item>
        <item name="colorSecondaryVariant">@color/theme_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputLayoutDesign" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextInputEditTextDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>